.top-page
  = link_to '出品', new_item_path
.item__body
  .item__body__title
    新規投稿商品一覧
  .item__body__lists
    - @items.each do |item|
      -if item.auction_status == '売り切れ'
        .item__body__lists__list
          = link_to item_path(item.id), data: {"turbolinks" => false}  do
            %figure.list__img
              = image_tag item.images.first.image.url
            .list__body
              %h3.name
                = item.item_name
              .list__price
                %ul
                  %li
                    = item.price.to_s(:delimited)
                    円
                %p (税込)
            .list__sold
              .list__sold__inner
                sold
      - else
        .item__body__lists__list
          = link_to item_path(item.id), data: {"turbolinks" => false}  do
            %figure.list__img
              = image_tag item.images.first.image.url
            .list__body
              %h3.name
                = item.item_name
              .list__price
                %ul
                  %li
                    = item.price.to_s(:delimited)
                    円
                %p (税込)