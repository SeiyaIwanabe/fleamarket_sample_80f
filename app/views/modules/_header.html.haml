%header.Header
  .Header__inner
    .Header__inner--main
      %h1.MainIcon
        = link_to root_path do
          = image_tag("logo.png")
      .SearchArea
        %ul.SearchArea__form
          = form_with(url: search_items_path, local: true, method: :get, class: "") do |f|
            = f.text_field :key, placeholder: "キーワードから探す", class: "search-input", id: "searchInput"
            = f.submit class: 'submit', id: 'SearchArea__form--submit'
          
    .NavLists
      .NavLists__left
        カテゴリー
        
      %ul.NavLists__right 
        - if user_signed_in?
          = link_to "マイページ", "/users/#{current_user.id}"
          = link_to 'ログアウト', destroy_user_session_path, method: :delete
          
        - else
          %li.NavLists__right--login.NavLists__right--item
            = link_to "ログイン", new_user_session_path
            %ul
              %li
                = icon('fab', 'facebook-f')
                = link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post
              %li
                = icon('fab', 'google')
                = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post
          
          %li.NavLists__right--new.NavLists__right--item
            = link_to "新規会員登録", new_user_registration_path
            %ul
              %li.NavLists__right--item
                = icon('fab', 'facebook-f')
                = link_to 'Facebookで登録', user_facebook_omniauth_authorize_path, method: :post
              %li.NavLists__right--item
                = icon('fab', 'google')
                = link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, method: :post

    .Notifications
    - flash.each do |key, value|
      = content_tag(:div, value, class: key)
          


