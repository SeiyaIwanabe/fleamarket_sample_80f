.Logo_Resistration
  .Logo_Resistration__image
.NevMessage
  %h3 本人確認情報を登録してください
= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user
  .field
    = f.label :ニックネーム
    %br/
    = f.text_field :nickname

  .field
    = f.label :姓
    %br/
    = f.text_field :family_name, placeholder: '(例)神南'

  .field
    = f.label :名
    %br/
    = f.text_field :first_name, placeholder: '(例)太郎'

  .field
    = f.label :'フリガナ(姓)'
    %br/
    = f.text_field :family_name_kana, placeholder: '(例)ジンナン'

  .field
    = f.label :'フリガナ(名)'
    %br/
    = f.text_field :first_name_kana, placeholder: '(例)タロウ'

  .field
    = f.label :メールアドレス
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"

  .field
    = f.label :生年月日
    %br/
    != sprintf(f.date_select(:birthday,with_css_classes:'Barthday', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'

  .field
    = f.label :パスワード
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"

  .field
    = f.label :'パスワード(確認用)'
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Next"
= render "devise/shared/links"