%h2 商品送り先の情報を登録
= form_for @sending_destination do |f|
  = render "devise/shared/error_messages", resource: @sending_destination

  .field
    = f.label :'郵便番号(ハイフンなし)'
    %br/
    = f.text_field :post_code

  .field
    = f.label :都道府県
    %br/
    = f.text_field :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県' 

  .field
    = f.label :市区町村
    %br/
    = f.text_field :address_city

  .field
    = f.label :番地
    %br/
    = f.text_field :address_street

  .field
    = f.label :建物名
    %br/
    = f.text_field :address_building

  .field
    = f.label :姓
    %br/
    = f.text_field :destination_family_name

  .field
    = f.label :名
    %br/
    = f.text_field :destination_first_name

  .field
    = f.label :セイ
    %br/
    = f.text_field :destination_family_name_kana

  .field
    = f.label :メイ
    %br/
    = f.text_field :destination_first_name_kana

  .field
    = f.label :'電話番号(ハイフンなし)'
    %br/
    = f.text_field :phone_number

  .actions
    = f.submit "サインアップ"

= render "devise/shared/links"